<div class="max-w-5xl mx-auto flex w-full pt-12">
  <div class="w-full px-12 md:px-0">
    <h1 class="text-2xl font-bold mb-6">
      Une idée de projet ? Contactez-moi !
    </h1>
    <%# <p class="mb-6">
      Si votre demande concerne les délais d’envois d’une commande, merci de consulter cette page avant de m’écrire
    </p> %>

    <%= form_for @contact, url: send_message_path, method: :post  do |field| %>
      <div class="text-input mb-3">
        <%= field.label :full_name, "Nom & Prénom" %>
        <%= field.text_field :full_name %>
        <%= validation_message(@contact, :full_name) %>
      </div>
      <div class="text-input mb-3">
        <%= field.label :email, "Email" %>
        <%= field.text_field :email %>
        <%= validation_message(@contact, :email) %>
      </div>
      <div class="text-input mb-3 hidden">
        <%= field.label :nickname, "Nickname" %>
        <%= field.text_field :nickname %>
      </div>
      <div class="text-input mb-3">
        <%= field.label :content, "Message" %>
        <%= field.text_area :content, class: "h-24" %>
        <%= validation_message(@contact, :content) %>
      </div>
      <%= field.submit "Envoyer", class: "mt-6 px-3 py-2 border rounded-lg hover:bg-blue-200 cursor-pointer" %>
    <% end %>
  </div>
</div>
